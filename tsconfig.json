{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"types": ["bun-types"]
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
